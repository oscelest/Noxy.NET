@inherits BaseInputTextualValue<string>

<input @attributes="AdditionalAttributes" id="@IDCurrent" class="@CssClass" type="password" autocomplete="@Autocomplete?.ToAttributeValue()" size="@SizeCurrent" value="@Value" @onchange="OnValueChange"/>

@code {

    [Parameter]
    public int? Size { get; set; }
    protected int SizeCurrent => Size ?? 35;

    [Parameter]
    public WebFormInputFieldPasswordAutocompleteEnum? Autocomplete { get; set; }

    [JSInvokable]
    public override void OnValueInput(string value)
    {
        NotifyChange(value);
    }

    protected override void OnValueChange(ChangeEventArgs args)
    {
        NotifyChange(args.Value?.ToString() ?? string.Empty);
    }

}
