@inherits BaseInputTextualValue<string>

<input @attributes="AdditionalAttributes" id="@IDCurrent" class="@CssClass" type="password" autocomplete="@Autocomplete?.ToAttributeValue()" size="@SizeCurrent" value="@Value" @onchange="ValueChange" @oninput="InputChange"/>

@code {
    
    [Parameter]
    public WebFormInputFieldPasswordAutocompleteEnum? Autocomplete { get; set; }
    
    private void ValueChange(ChangeEventArgs args)
    {
        NotifyChange(args.Value?.ToString() ?? string.Empty);
    }

    private void InputChange(ChangeEventArgs args)
    {
        NotifyChange(args.Value?.ToString() ?? string.Empty);
    }
    

}
