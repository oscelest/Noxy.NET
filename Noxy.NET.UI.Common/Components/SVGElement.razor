@inherits ElementComponent

<svg @attributes="@AdditionalAttributes" class="@CssClass" width="@Width" height="@Height" x="@X" y="@Y" viewBox="@ViewBox" preserveAspectRatio="@PreserveAspectRatio" xmlns="http://www.w3.org/2000/svg">
    @ChildContent
</svg>

@code {

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public int? Width { get; set; }

    [Parameter]
    public int? Height { get; set; }

    [Parameter]
    public int? X { get; set; }

    [Parameter]
    public int? Y { get; set; }

    [Parameter]
    public string? ViewBox { get; set; }

    [Parameter]
    public HTMLPreserveAspectRatioAlignEnum? PreserveAspectRatioPosition { get; set; }
    private HTMLPreserveAspectRatioAlignEnum PreserveAspectRatioPositionCurrent => PreserveAspectRatioPosition ?? HTMLPreserveAspectRatioAlignEnum.XMidYMid;

    [Parameter]
    public HTMLPreserveAspectRatioScalingEnum? PreserveAspectRatioScaling { get; set; }
    private HTMLPreserveAspectRatioScalingEnum PreserveAspectRatioScalingCurrent => PreserveAspectRatioScaling ?? HTMLPreserveAspectRatioScalingEnum.Meet;

    private string PreserveAspectRatio => $"{PreserveAspectRatioPositionCurrent.ToText()} {PreserveAspectRatioScalingCurrent.ToText()}";

}
